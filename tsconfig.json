{
  "extends": "ts-node/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "alwaysStrict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
